{
  "name": "shorturl",
  "version": "0.0.3",
  "description": "API project for freeCodeCamp",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "install-deps": "npm install",
    "build": "npm run clean && tsc && npm run copy-assets",
    "clean": "rimraf dist",
    "copy-assets": "copyfiles -u 1 \"src/views/**/*\" \"src/public/**/*\" dist",
    "postinstall": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "body-parser": "^1.20.3",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2"
  },
  "author": "Pedro Bittencourt",
  "license": "MIT"
}
